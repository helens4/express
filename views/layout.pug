doctype html
mixin item(title, url)
    li
        a(href=url class=path==url ? 'active' : '')=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    ul
        +item('strona główna','/')
        +item('aktualnosci','/news')
        +item('quiz','/quiz')
        +item('admin','/admin')

    block content
